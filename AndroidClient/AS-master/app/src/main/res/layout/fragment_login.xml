<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/image_login"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:src="@drawable/login_dialog" />

    <EditText
        android:id="@+id/editText_LoginEmail"
        android:layout_width="@dimen/login_space_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="sggkjihua@163.com"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editText_LoginPassword"
        android:ems="10"
        android:text="202020"
        android:hint="Password"
        android:layout_width="@dimen/login_space_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/bt_openLoginDialog"
        android:layout_width="@dimen/login_space_width"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/login_button"
        android:textStyle="bold"
        android:textSize="12dp"
        android:background="@color/button_login" />




    <Button
        android:id="@+id/bt_openSignupDialog"
        style="?attr/borderlessButtonStyle"
        android:layout_width="@dimen/login_space_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/signUp_button"
        android:textSize="10dp"
        android:textStyle="normal" />


</LinearLayout>